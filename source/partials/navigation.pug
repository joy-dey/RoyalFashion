header.bg-white.navigation-block.pt-3
    .container-fluid
        .row.align-items-center.border-bottom.pb-3
            .col-xl-2.col-lg-3.col-md-12.mb-3.mb-lg-0
                a(href="index.html") 
                    img.img-fluid(src="assets/img/logo.png", alt="brand logo")
            .col-xl-7.col-lg-6.col-md-6.mb-3.mb-lg-0
                form#search(action="") 
                    .input-group.w-100
                        input.form-control(type="search", name="searchedItem", placeholder="What are you looking for...")
                        button.btn.btn-primary(type="submit") 
                            i.mdi.mdi-magnify 
                            
            .col-xl-3.col-lg-3.col-md-6
                ul.list-unstyled.widgets.d-flex.justify-content-evenly.w-100.mb-0
                    each widget in user_widgets
                        +generateUserWidgets(widget.name, widget.url, widget.icon, widget.badge)

    .navigation-holder.border-bottom
        .container-fluid
            ul.list-unstyled.list-inline.my-2
               each item in categories
                    +generateScrollingNav(item.name, item.url)