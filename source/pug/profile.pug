    #addressPopup.modal.fade(tabindex='-1' aria-labelledby='Rating' aria-hidden='true')
        .modal-dialog.modal-dialog-scrollable.modal-dialog-centered
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Add an Address
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                    .row 
                        .col-6
                            .form-group.mb-2
                                input.form-control(type="text", name="name" placeholder="Name")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="tel", name="phone" placeholder="10 digit mobile number", max="10")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="text", name="pin" placeholder="Pincode")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="text", name="locality" placeholder="Locality")
                        .col-12
                            .form-group.mb-2
                                textarea.form-control(name="address", cols="30", rows="3" placeholder="Address (Area & Street)")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="text", name="city" placeholder="City/District/Town")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="tel", name="state" placeholder="State") 
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="text", name="landmark" placeholder="Landmark")
                        .col-6
                            .form-group.mb-2 
                                input.form-control(type="tel", name="alternatePhone" placeholder="Alternate Phone", max="10")
                        .col-12
                            .form-group 
                                label.text-muted.d-block.small.mb-2 Address Type
                                label(for="addressHome").me-3
                                    input.form-check-input#addressHome(type="radio", name="addressType") 
                                    span.ms-2 Home
                                label(for="addressWork")
                                    input.form-check-input#addressWork(type="radio", name="addressType") 
                                    span.ms-2 Work
                        
                .modal-footer
                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Submit


